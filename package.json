{
	"name": "linkify",
	"version": "0.0.3-alpha.0",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"clean": "rm .svelte-kit -fr && svelte-kit sync"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-node": "^2.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/pg": "^8.10.9",
		"@types/primer__octicons": "^19.6.1",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"drizzle-kit": "^0.20.10",
		"eslint": "^8.28.0",
		"eslint-plugin-svelte": "^2.30.0",
		"less": "^4.2.0",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.0"
	},
	"type": "module",
	"volta": {
		"node": "18.18.0"
	},
	"dependencies": {
		"@fontsource/comic-mono": "^5.0.7",
		"@primer/octicons": "^19.8.0",
		"@prisma/client": "5.4.1",
		"drizzle-orm": "^0.29.3"
	},
	"optionalDependencies": {
		"id128": "^1.6.6",
		"nanoid": "^5.0.2"
	},
	"standard-version": {
		"types": [
			{
				"type": "feat",
				"section": "Features ✨"
			},
			{
				"type": "fix",
				"section": "Bug Fixes 🐛🔨"
			},
			{
				"type": "component",
				"section": "Components"
			},
			{
				"type": "docs",
				"section": "Documentation 📖"
			},
			{
				"type": "orm",
				"section": "Database Schema 🖧"
			},
			{
				"type": "util",
				"section": "Utilities 🔨"
			},
			{
				"type": "deps",
				"section": "Dependencies 📦"
			},
			{
				"type": "chore",
				"hidden": true
			}
		],
		"commitUrlFormat": "https://patchy.soopy.moe/cassie/linkify/commit/{{hash}}",
		"compareUrlFormat": "https://patchy.soopy.moe/cassie/linkify/compare/{{previousTag}}...{{currentTag}}",
		"issueUrlFormat": "https://patchy.soopy.moe/cassie/linkify/issues/{{id}}",
		"releaseCommitMessageFormat": "chore(release): release {{currentTag}}",
		"prerelease": "alpha",
		"sign": true
	}
}
